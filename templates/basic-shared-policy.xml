<config-template xmlns="http://tail-f.com/ns/config/1.0" servicepoint='basic-shared-route-policy-servicepoint'>
    <devices xmlns="http://tail-f.com/ns/ncs">
        <device>
          <name>{/device}</name>
          <config>
            <route-policy xmlns="http://tail-f.com/ned/cisco-ios-xr">
              <name>{/policy}</name>
              <!-- When you have an xpath to a leaf-list (/chunk) the result is the 
               string concatenation of all leaf list values.
               -->
              <value>{/chunk}</value>
            </route-policy>
          </config>
        </device>
      </devices>
</config-template>